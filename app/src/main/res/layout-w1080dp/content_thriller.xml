<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:showIn="@layout/activity_thriller"
    tools:context="com.RuffinApps.johnnie.oldtimeradio.ThrillerActivity">

    <ScrollView
        android:layout_width="1075dp"
        android:layout_height="577dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="0dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:context="com.RuffinApps.johnnie.oldtimeradio.ThrillerActivity"
                tools:showIn="@layout/activity_thriller">

                <TableLayout
                    android:id="@+id/tableLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dip">

                        <Button
                            android:id="@+id/nbBtn"
                            android:layout_width="420dp"
                            android:layout_height="420dp"
                            android:layout_weight="1"
                            android:background="@mipmap/nightbeat"
                            android:contentDescription="@string/NightBeat" />

                        <Button
                            android:id="@+id/sgBtn"
                            android:layout_width="420dp"
                            android:layout_height="420dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@mipmap/sgimage"
                            android:contentDescription="@string/Speed" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip">

                        <Button
                            android:id="@+id/wsBtn"
                            android:layout_width="420dp"
                            android:layout_height="420dp"
                            android:layout_marginTop="15dp"
                            android:background="@mipmap/thewhistler"
                            android:contentDescription="@string/TheWhistler" />

                        <Button
                            android:id="@+id/abmBtn"
                            android:layout_width="420dp"
                            android:layout_height="420dp"
                            android:layout_marginTop="15dp"
                            android:background="@mipmap/adbm"
                            android:contentDescription="@string/AdventuresByMorse" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip">

                        <Button
                            android:id="@+id/adcBtn"
                            android:layout_width="420dp"
                            android:layout_height="420dp"
                            android:layout_marginTop="15dp"
                            android:background="@mipmap/adc"
                            android:contentDescription="@string/AdventuresofDickCole" />

                        <Button
                            android:id="@+id/bvBtn"
                            android:layout_width="420dp"
                            android:layout_height="420dp"
                            android:layout_marginTop="15dp"
                            android:background="@mipmap/boldventure"
                            android:contentDescription="@string/BoldVenture" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip">

                        <Button
                            android:id="@+id/bbBtn"
                            android:layout_width="420dp"
                            android:layout_height="420dp"
                            android:layout_marginTop="15dp"
                            android:background="@mipmap/bostonblackie"
                            android:contentDescription="@string/BostonBlackie" />

                        <Button
                            android:id="@+id/cbsBtn"
                            android:layout_width="420dp"
                            android:layout_height="420dp"
                            android:layout_marginTop="15dp"
                            android:background="@mipmap/cbsradio"
                            android:contentDescription="@string/CBSMysteryTheater" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip">

                        <Button
                            android:id="@+id/daBtn"
                            android:layout_width="420dp"
                            android:layout_height="420dp"
                            android:layout_marginTop="15dp"
                            android:background="@mipmap/dangerousassignment"
                            android:contentDescription="@string/DangerousAssignment" />

                        <Button
                            android:id="@+id/dtBtn"
                            android:layout_width="420dp"
                            android:layout_height="420dp"
                            android:layout_marginTop="15dp"
                            android:background="@mipmap/duffystavern"
                            android:contentDescription="@string/DuffysTavern" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip">

                        <Button
                            android:id="@+id/mmnBtn"
                            android:layout_width="420dp"
                            android:layout_height="420dp"
                            android:layout_marginTop="15dp"
                            android:background="@mipmap/mrmrsnorth"
                            android:contentDescription="@string/MrAndMrsNorth" />

                        <Button
                            android:id="@+id/qpBtn"
                            android:layout_width="420dp"
                            android:layout_height="420dp"
                            android:layout_marginTop="15dp"
                            android:background="@mipmap/quietplease"
                            android:contentDescription="@string/QuietPlease" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip">

                        <Button
                            android:id="@+id/ssBtn"
                            android:layout_width="420dp"
                            android:layout_height="420dp"
                            android:layout_marginTop="15dp"
                            android:background="@mipmap/suspense"
                            android:contentDescription="@string/Suspense" />

                        <Button
                            android:id="@+id/hlBtn"
                            android:layout_width="420dp"
                            android:layout_height="420dp"
                            android:layout_marginTop="15dp"
                            android:background="@mipmap/harrylime"
                            android:contentDescription="@string/HarryLime" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>
</RelativeLayout>
