<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.RuffinApps.johnnie.oldtimeradiofree.CategoryActivity">

    <TextView
        android:id="@+id/txtcat"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_category"
        android:textColor="@color/black"
        android:textSize="12pt"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/comedyButton"
        android:layout_marginTop="30dp"
        android:layout_below="@id/txtcat"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category_comedy"
        />

    <Button
        android:id="@+id/scifiButton"
        android:layout_below="@id/comedyButton"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category_scifi"
        />

    <Button
        android:id="@+id/thrillerButton"
        android:layout_below="@id/scifiButton"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category_thriller"
        />

    <Button
        android:id="@+id/westernButton"
        android:layout_below="@id/thrillerButton"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category_western"
        />
    <Button
        android:id="@+id/horrorButton"
        android:layout_below="@id/thrillerButton"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category_horror"
        />


</RelativeLayout>
