<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_comedy"
    tools:context=".ComedyActivity">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_comedy"
        tools:context=".ComedyActivity">
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                     android:id="@+id/tableLayout1"
                     android:layout_width="fill_parent"
                     android:layout_height="fill_parent" >
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

    <ImageButton
        android:id="@+id/imageBtn1"
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:src="@mipmap/burnsandallen"
        android:contentDescription="@string/BurnsAndAllenImage"/>

    <ImageButton
        android:id="@+id/fbBtn"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:src="@mipmap/fibber_and_molly_"
        android:contentDescription="@string/FibberMcGeeImage"
        />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <ImageButton
                android:id="@+id/mlBtn"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="275dp"
                android:src="@mipmap/lewis_and_martin"
                android:contentDescription="@string/MartinAndLewisImage"
                />

            <ImageButton
                android:id="@+id/gilBtn"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="275dp"
                android:src="@mipmap/greatgildersleeve"
                android:contentDescription="@string/GilderSleeveImage"
                />
        </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip" >

                <ImageButton
                    android:id="@+id/jbBtn"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="275dp"
                    android:src="@mipmap/jackbenny_fixed"
                    android:contentDescription="@string/JackBennyImage"
                    />

                <ImageButton
                    android:id="@+id/bhBtn"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="275dp"
                    android:layout_height="275dp"
                    android:src="@mipmap/bob_hope_1950_0_fixed_0"
                    android:contentDescription="@string/BobHopeImage"
                    />
            </TableRow>
        </TableLayout>
</LinearLayout>
    </HorizontalScrollView>
    </ScrollView>
</RelativeLayout>

