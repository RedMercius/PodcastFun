<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background = "@color/lightgray"
    android:layout_marginTop="10dp"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_sci_fi"
    tools:context=".SciFiActivity"
    >

    <ImageButton
        android:id="@+id/xm1Btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@mipmap/xminusone"
        android:contentDescription="@string/XMinus1"/>

    <ImageButton
        android:id="@+id/innSancBtn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/xm1Btn"
        android:layout_toEndOf="@id/xm1Btn"
        android:src="@mipmap/innersanctum0"
        android:contentDescription="@string/InnerSactum"
        />

        <ImageButton
            android:id="@+id/dxBtn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/innSancBtn"
            android:layout_toEndOf="@id/innSancBtn"
            android:src="@mipmap/dimension_x"
            android:contentDescription="@string/DimensionX"/>
</RelativeLayout>
