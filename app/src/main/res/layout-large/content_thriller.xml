<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background = "@color/lightgray"
    android:layout_marginTop="10dp"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_thriller"
    tools:context=".ThrillerActivity"
    >

    <ImageButton
        android:id="@+id/nbBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/nightbeat"
        android:contentDescription="@string/NightBeat"
        />

    <ImageButton
        android:id="@+id/sgBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/nbBtn"
        android:layout_toRightOf="@id/nbBtn"
        android:src="@mipmap/sgimage"
        android:contentDescription="@string/Speed"/>

        <ImageButton
            android:id="@+id/wsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/sgBtn"
            android:layout_toRightOf="@id/sgBtn"
            android:src="@mipmap/thewhistler"
            android:contentDescription="@string/TheWhistler"
            />
</RelativeLayout>
