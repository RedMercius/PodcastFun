<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background = "@color/lightgray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_select"
    tools:context=".ComedyActivity">

    <Button
        android:id="@+id/allShowsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="20pt"
        android:text="@string/button_all_shows"/>


    <Button
        android:id="@+id/unplayedList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/allShowsList"
        android:layout_toEndOf="@id/allShowsList"
        android:layout_alignParentTop="true"
        android:textSize="20pt"
        android:text="@string/button_not_played"/>

    <Button
        android:id="@+id/playedList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/unplayedList"
        android:layout_toEndOf="@id/unplayedList"
        android:layout_alignParentTop="true"
        android:textSize="20pt"
        android:text="@string/button_played"/>

    <ListView
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playedList"
        />

</RelativeLayout>
