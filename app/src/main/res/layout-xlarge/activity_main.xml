<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context="com.RuffinApps.johnnie.oldtimeradio.MainActivity">

    <TextView
        android:id="@+id/txtcat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="217dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="62dp"
        android:text="@string/title_category"
        android:textColor="@color/black"
        android:textSize="25pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/comedyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/comedyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginLeft="73dp"
        android:layout_marginBottom="55dp"
        android:text="@string/category_comedy"
        android:textSize="20pt"
        app:layout_constraintBottom_toTopOf="@+id/scifiButton"
        app:layout_constraintStart_toStartOf="@+id/scifiButton"
        app:layout_constraintTop_toBottomOf="@+id/txtcat" />

    <Button
        android:id="@+id/scifiButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="49dp"
        android:text="@string/category_scifi"
        android:textSize="20pt"
        app:layout_constraintBottom_toTopOf="@+id/thrillerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comedyButton" />

    <Button
        android:id="@+id/thrillerButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:layout_marginBottom="72dp"
        android:text="@string/category_thriller"
        android:textSize="20pt"
        app:layout_constraintBottom_toTopOf="@+id/westernButton"
        app:layout_constraintEnd_toEndOf="@+id/scifiButton"
        app:layout_constraintTop_toBottomOf="@+id/scifiButton" />

    <Button
        android:id="@+id/westernButton"
        android:layout_width="222dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="254dp"
        android:text="@string/category_western"
        android:textSize="20pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/thrillerButton"
        app:layout_constraintTop_toBottomOf="@+id/thrillerButton" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

</android.support.constraint.ConstraintLayout>
