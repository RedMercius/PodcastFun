<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/lightgray"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_play"
    tools:context="PlayActivity">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_marginTop="20dp"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15pt"
                android:textColor="#000000"
                />

        <TextView
            android:id="@+id/txtCurPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="13dp"
            android:textSize="12pt"
            android:layout_below="@id/txtTitle"
            android:textColor="#000000"
            />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="250dp"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/txtCurPos"
            android:layout_toEndOf="@id/txtCurPos"
            android:layout_below="@id/txtTitle"
            android:background="@color/black_overlay"
            />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textSize="12pt"
            android:layout_below="@id/txtTitle"
            android:layout_toRightOf="@id/seekBar"
            android:layout_toEndOf="@id/seekBar"
            android:textColor="#000000"
            />

            <ImageButton
                android:id="@+id/rewind_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/txtCurPos"
                android:contentDescription="@string/rewind_button"
                />

            <ImageButton
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="55dp"
                android:layout_below="@id/txtCurPos"
                android:layout_toRightOf="@id/rewind_button"
                android:layout_toEndOf="@id/rewind_button"
                android:contentDescription="@string/play_button"
                    />

            <ImageButton
                android:id="@+id/forward_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginStart="65dp"
                android:layout_marginLeft="65dp"
                android:layout_below="@id/txtCurPos"
                android:layout_toRightOf="@id/play_button"
                android:layout_toEndOf="@id/play_button"
                android:contentDescription="@string/forward_button"
                />

    <ImageView android:id="@+id/fullscreen_content"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_marginTop="30dp"
               android:keepScreenOn="true"
               android:layout_below="@id/play_button"
               android:contentDescription="@string/title_activity_play"/>
</RelativeLayout>