<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.RuffinApps.johnnie.oldtimeradio.MainActivity">

        <TextView
            android:id="@+id/txtcat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/title_category"
            android:textColor="@color/black"
            android:textSize="9pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/comedyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtcat"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/category_comedy"
            android:textSize="7pt" />

        <Button
            android:id="@+id/scifiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comedyButton"
            android:layout_centerHorizontal="true"
            android:text="@string/category_scifi"
            android:textSize="7pt" />

        <Button
            android:id="@+id/thrillerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scifiButton"
            android:layout_centerHorizontal="true"
            android:text="@string/category_thriller"
            android:textSize="7pt" />

        <Button
            android:id="@+id/westernButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/thrillerButton"
            android:layout_centerHorizontal="true"
            android:text="@string/category_western"
            android:textSize="7pt" />
    </RelativeLayout>
</ScrollView>
