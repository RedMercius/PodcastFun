<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ComedyActivity"
        tools:showIn="@layout/activity_select">

        <Button
            android:id="@+id/allShowsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/button_all_shows"
            android:textSize="3pt" />

        <Button
            android:id="@+id/unplayedList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/allShowsList"
            android:layout_toRightOf="@id/allShowsList"
            android:text="@string/button_not_played"
            android:textSize="3pt" />

        <Button
            android:id="@+id/playedList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/unplayedList"
            android:layout_toRightOf="@id/unplayedList"
            android:text="@string/button_played"
            android:textSize="3pt" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playedList" />

    </RelativeLayout>
</HorizontalScrollView>